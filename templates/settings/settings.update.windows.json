{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location of the resources (e.g. westus, eastus, westeurope)."
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-09-01-preview",
      "name": "settingsSecret_1",
      "type": "Microsoft.ServiceFabricMesh/secrets",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "properties": {
        "kind": "inlinedValue",
        "contentType": "text/plain",
        "description": "An example secret that is passed as an environment variable in the container."
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "settingsSecret_1/v1",
      "type": "Microsoft.ServiceFabricMesh/secrets/values",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/secrets/settingsSecret_1"
      ],
      "properties": {
        "value": "Secret-In-The-Environment-Variable"
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "settingsSecret_2",
      "type": "Microsoft.ServiceFabricMesh/secrets",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "properties": {
        "kind": "inlinedValue",
        "contentType": "text/plain",
        "description": "An example secret that is passed as an settings file in the container."
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "settingsSecret_2/v2",
      "type": "Microsoft.ServiceFabricMesh/secrets/values",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/secrets/settingsSecret_2"
      ],
      "properties": {
        "value": "MODIFIED-Secret-In-The-Settings-File"
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "settingsNetwork",
      "type": "Microsoft.ServiceFabricMesh/networks",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "properties": {
        "kind": "Local",
        "description": "Service Fabric Mesh Network for Settings sample.",
        "networkAddressPrefix": "2.0.0.0/16"
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "settingsGateway",
      "type": "Microsoft.ServiceFabricMesh/gateways",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/networks/settingsNetwork"
      ],
      "properties": {
        "description": "Service Fabric Mesh Gateway for Settings sample.",
        "sourceNetwork": {
          "name": "Open"
        },
        "destinationNetwork": {
          "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'settingsNetwork')]"
        },
        "tcp": [
          {
            "name": "web",
            "port": 80,
            "destination": {
              "applicationName": "settingsApp",
              "serviceName": "settingsService",
              "endpointName": "settingsListener"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "settingsApp",
      "type": "Microsoft.ServiceFabricMesh/applications",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/secrets/settingsSecret_1",
        "Microsoft.ServiceFabricMesh/secrets/settingsSecret_1/values/v1",
        "Microsoft.ServiceFabricMesh/secrets/settingsSecret_2",
        "Microsoft.ServiceFabricMesh/secrets/settingsSecret_2/values/v2",
        "Microsoft.ServiceFabricMesh/networks/settingsNetwork"
      ],
      "properties": {
        "description": "Service Fabric Mesh Settings Application.",
        "services": [
          {
            "type": "Microsoft.ServiceFabricMesh/services",
            "name": "settingsService",
            "properties": {
              "description": "Service Fabric Mesh Settings Service.",
              "osType": "windows",
              "codePackages": [
                {
                  "name": "settingsCode",
                  "image": "seabreeze/azure-mesh-settings:0.1.3-nanoserver-1709",
                  "endpoints": [
                    {
                      "name": "settingsListener",
                      "port": "80"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "1",
                      "memoryInGB": "1"
                    }
                  },
                  "environmentVariables": [
                    {
                      "name": "_CONFIG-PARAM-1",
                      "value": "Config-In-The-Environment-Variable"
                    },
                    {
                      "name": "_SECRET-PARAM-1",
                      "value": "[resourceId('Microsoft.ServiceFabricMesh/secrets/values','settingsSecret_1','v1')]"
                    }
                  ],
                  "settings": [
                    {
                      "name": "_CONFIG-PARAM-2",
                      "value": "MODIFIED-Config-In-The-Settings-File"
                    },
                    {
                      "name": "_SECRET-PARAM-2",
                      "value": "[resourceId('Microsoft.ServiceFabricMesh/secrets/values','settingsSecret_2','v2')]"
                    }
                  ]
                }
              ],
              "replicaCount": "1",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'settingsNetwork')]",
                  "endpointRefs": [
                    {
                      "name": "settingsListener"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "publicIPAddress": {
      "value": "[reference('settingsGateway').ipAddress]",
      "type": "string"
    }
  }
}
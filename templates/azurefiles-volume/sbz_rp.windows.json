{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location of the resources."
      }
    },
    "azurefile-shareName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Files file share that provides the volume for the container."
      }
    },
    "azurefile-accountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure storage account that contains the file share."
      }
    },
    "azurefile-accountKey": {
      "type": "string",
      "metadata": {
        "description": "Access key for the Azure storage account that contains the file share."
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-07-01-preview",
      "name": "mysharew",
      "type": "Microsoft.ServiceFabricMesh/volumes",
      "location": "[parameters('location')]",
      "properties": {
        "description": "File share backed by Azure Files storage.",
        "provider": "SFAzureFile",
        "azureFileParameters": {
          "shareName": "[parameters('azurefile-shareName')]",
          "accountName": "[parameters('azurefile-accountName')]",
          "accountKey": "[parameters('azurefile-accountKey')]"
        }
      }
    },
    {
      "apiVersion": "2018-07-01-preview",
      "name": "myappw",
      "type": "Microsoft.ServiceFabricMesh/applications",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/volumes/mysharew"
      ],
      "properties": {
        "services": [
          {
            "name": "myservice",
            "properties": {
              "osType": "Windows",
              "codePackages": [
                {
                  "name": "volumetest",
                  "image": "seabreeze/volumetest:windows-v1",
                  "volumeRefs": [
                    {
                      "name": "[resourceId('Microsoft.ServiceFabricMesh/volumes', 'mysharew')]",
                      "destinationPath": "c:\\VolumeTest\\Data"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "1",
                      "memoryInGB": "1.5"
                    }
                  }
                }
              ],
              "replicaCount": "1"
            }
          }
        ]
      }
    }
  ]
}